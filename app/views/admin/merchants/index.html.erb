<div class="enabled_merchants">
  <h2> Enabled Merchants </h2>
  <% @merchants.each do |merchant| %>
    <% if merchant.status == "enabled" %>
    <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %>
      <%= button_to "Disable #{merchant.name}", "/admin/merchants/#{merchant.id}?status=disabled", method: :put %>
    <% end %>
  <% end %>
</div>

<div class="disabled_merchants">
  <h2> Disabled Merchants </h2>
  <% @merchants.each do |merchant| %>
    <% if merchant.status == "disabled" %>
      <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %>
      <%= button_to "Enable #{merchant.name}", "/admin/merchants/#{merchant.id}?status=enabled", method: :put %>
    <% end %>
  <% end %>
</div>

<div class="top_merchants">
  <ol>
    <% @merchants.top_five_merchants.each do |merchant| %>
      <li><%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %></li>
      <p> <%= "#{merchant.name}" %> - $<%= merchant.totalrevenue %> in sales </p>
      <p>Top day: <%=  merchant.best_sales_day %></p>
    <% end %>
  </ol>

</div>

